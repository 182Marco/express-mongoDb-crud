<form action="api/user" id="add_user" method="POST">
  <div class="new_user">
    <div class="form-group">
      <label for="name" class="text-light">Name</label>
      <input type="hidden" name="id" value="<%=user.id%>" />
      <input
        type="text"
        name="name"
        id="name"
        value="<%=user.name%>"
        placeholder="<%= user.name %>"
      />
    </div>
    <div class="form-group">
      <label for="Email" class="text-light">Email</label>
      <input
        id="email"
        type="text"
        name="email"
        value="<%=user.email%>"
        placeholder="example@gmail.com"
      />
    </div>
    <div class="form-group">
      <label for="status" class="text-light">Gender</label>
      <div class="radio inline">
        <input type="radio" name="gender" value="male" id="radio-2" <%=
        user.gender === 'male'? 'checked' : '' %> />
        <label for="radio-2" class="radio-label">Male</label>
      </div>
      <div class="radio inline">
        <input type="radio" name="gender" value="female" id="radio-3" <%=
        user.gender === 'female'? 'checked' : '' %> />
        <label for="radio-3" id="status" class="radio-label">Female</label>
      </div>
    </div>
    <div class="form-group">
      <label for="status" class="text-light">Status</label>
      <div class="radio inline">
        <input type="radio" name="status" value="active" id="radio-4" <%=
        user.status === 'active'? 'checked' : '' %> />
        <label class="radio-label" for="radio-4">Active</label>
      </div>
      <div class="radio inline">
        <input type="radio" name="status" value="inactive" id="radio-5" <%=
        user.status === 'inactive'? 'checked' : '' %> />
        <label for="radio-5" class="radio-label">Inactive</label>
      </div>
      <button type="submit" class="btn text-dark update">Save</button>
    </div>
  </div>
</form>
